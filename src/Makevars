# Default make file
PKG_CPPFLAGS=-I. -I../inst/include/

CXX_STD = CXX20


# Include all C++ files in src/ and its subdirectories: src/*
SOURCES=exports.cpp parser/argument/class.cpp parser/argument/raw/class.cpp parser/narg/narg.cpp parser/pfunc/pfunc.cpp utils/converters/converters.cpp utils/Rapi.cpp utils/type_name/type_name.cpp

# Obtain the object files
OBJECTS=$(SOURCES:.cpp=.o)

# Make the shared object
all: $(SHLIB)

# Provide recipe to remove all objects
clean:
	@rm -f $(OBJECTS)
